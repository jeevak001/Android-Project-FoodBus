<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.foodbusapp.dev.foodbusmain.DonorHomeFragment">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:elevation="3dp"
            card_view:cardUseCompatPadding="true"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="7dp">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

            <ImageView
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:id="@+id/profile_image"
                android:layout_marginBottom="5dp"
                android:background="#9e9e9e"/>

            <TextView
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="5dp"
                android:id="@+id/profile_name"
                android:layout_height="wrap_content"
                android:text="Jeeva K"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:isIndicator="true"
                    android:id="@+id/profile_rating"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Location"
                    android:textColor="#FFF"
                    android:textAllCaps="false"
                    android:id="@+id/check_location"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/orange_button_selector"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:elevation="3dp"
            card_view:cardUseCompatPadding="true"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="7dp">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:id="@+id/profile_email"
                    android:layout_height="wrap_content"
                    android:text="jeeva.nasa01@gmail.com"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/profile_phone"
                    android:layout_height="wrap_content"
                    android:text="+919841210122"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:elevation="3dp"
            card_view:cardUseCompatPadding="true"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="7dp">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:lineSpacingExtra="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:id="@+id/profile_address"
                    android:layout_height="wrap_content"
                    android:text="#14, 19th Street \n Shakthi Nagar \n Nerkundram \n Chennai \n 600107"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>

    </ScrollView>

</FrameLayout>
