<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.foodbusapp.dev.foodbusmain.DonorHomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:background="#FEFEFE"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#FEFEFE"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".LoginActivity">


            <EditText
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="16sp"
                android:capitalize="sentences"
                android:layout_gravity="center"
                android:id="@+id/food_add_name"
                android:hint="Name of the Food"
                android:singleLine="true"
                android:background="@drawable/login_border"
                android:layout_marginTop="34dp"/>
            <EditText
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="15dp"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:singleLine="true"
                android:layout_gravity="center"
                android:paddingRight="30dp"
                android:id="@+id/food_add_amount"
                android:hint="Total Food Quantity"
                android:inputType="number"
                android:background="@drawable/login_border"
                android:layout_marginTop="23dp" />

            <!--<Spinner
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="1dp"
                android:singleLine="true"
                android:layout_gravity="center"
                android:id="@+id/food_add_status"
                android:inputType="number"
                android:background="@drawable/login_border"
                android:layout_marginTop="23dp"/>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expiry Time"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="23dp"/>

            <Spinner
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="1dp"
                android:scrollbars="none"
                android:singleLine="true"
                android:layout_gravity="center"
                android:id="@+id/food_add_expire"
                android:inputType="number"
                android:background="@drawable/login_border"
                android:layout_marginTop="3dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Add"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#FEFEFE"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:background="@drawable/orange_button_selector"
                android:id="@+id/add_button"
                android:layout_marginTop="42dp" />

        </LinearLayout>


    </ScrollView>



</FrameLayout>
