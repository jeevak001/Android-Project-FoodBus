<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        card_view:cardUseCompatPadding="true"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:id="@+id/donor_home_food_time"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:layout_weight="1"
                    android:paddingBottom="0dp"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:id="@+id/donor_home_food_date"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lemon Rice"
                android:textColor="#000"
                android:paddingBottom="5dp"
                android:paddingTop="2dp"
                android:textSize="20sp"
                android:gravity="center"
                android:id="@+id/donor_home_food_name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Id"
                android:padding="3dp"
                android:textSize="14sp"
                android:gravity="center"
                android:id="@+id/donor_home_food_id"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:padding="3dp"
                android:textSize="14sp"
                android:gravity="center"
                android:id="@+id/donor_home_food_amount"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount Left"
                android:padding="3dp"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:id="@+id/donor_home_food_amount_left"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textColor="#FEFEFE"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:background="#007766"
                android:id="@+id/donor_home_food_status"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <Button
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Food"
                    android:textAllCaps="false"
                    android:textColor="#FEFEFE"
                    android:textSize="14sp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/green_button_selector"
                    android:id="@+id/donor_home_food_edit"/>

                <Button
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remove Food"
                    android:textColor="#FEFEFE"
                    android:layout_weight="1"
                    android:background="@drawable/red_button_selector"
                    android:id="@+id/donor_home_food_remove"/>

            </LinearLayout>



        </LinearLayout>


    </android.support.v7.widget.CardView>




</LinearLayout>